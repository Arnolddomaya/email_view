<p id="notice"><%= notice %></p>

<div class="container">


  <div class="email"><h1>Emails</h1></div>
  <div class="container-parts">
    <table class="table">
      <thead>
        <tr>
          <th>Object</th>
          <!-- <th>Body</th>
          <th>Read</th> -->
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @emails.each do |email| %>
          <tr>
            <% if email.read %>
              <td><%= email.object %></td>
            <% else %>
              <td><strong><%= email.object %></strong></td>
            <% end %>
            <!-- <td><%= email.body %></td>
            <td><%= email.read %></td> -->
            <td><%= link_to 'Show', email, remote: true, class:"unbold" %></td>
            <!-- <td><%= link_to 'Edit', edit_email_path(email) %></td>
            <td><%= link_to 'Destroy', email, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
          </tr>
        <% end %>
      </tbody>

    </table>
    <div id="email-body" style="display:none;" class="content"></div>
  </div>

<br>
<%= link_to 'New Email', new_email_path %>
</div>
